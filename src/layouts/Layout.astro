---
import Head from "@components/Head.astro";
import Header from "@components/Header.astro";
import Footer from "@components/Footer.astro";
import Pagefind from "@components/PageFind.astro";
import { SITE } from "@consts";

type Props = {
  title: string;
  description: string;
  lang?: "zh" | "en";
};

const { title, description, lang = "zh" } = Astro.props;
---

<!doctype html>
<html lang={lang}>
  <head>
    <Head title={`${title} | ${SITE.TITLE}`} description={description} />
    <link
      rel="stylesheet"
      href="https://cdn.jsdelivr.net/npm/katex@0.16.21/dist/katex.min.css"
      crossorigin="anonymous"
    />
  </head>
  <body>
    <noscript>
      <style>
        .animate{
          opacity:1;
          translate: var(--tw-translate-x) calc(var(--spacing) * 0);
        }
      </style>
    </noscript>
    <Header lang={lang} />
    <main>
      <slot />
    </main>
    <Footer />
    <Pagefind />
    <script is:inline src="https://cdn.jsdelivr.net/npm/mermaid@11/dist/mermaid.min.js"></script>
    <script is:inline>
      mermaid.initialize({ startOnLoad: true, theme: 'default' });
      document.addEventListener("astro:after-swap", () => {
        mermaid.run();
      });
    </script>
  </body>
</html>
