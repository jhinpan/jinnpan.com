---
import Head from "@components/Head.astro";
import { SITE } from "@consts";
---

<!doctype html>
<html lang="en">
  <head>
    <Head title={`Welcome | ${SITE.TITLE}`} description={SITE.DESCRIPTION} />
    <noscript>
      <style>
        .welcome-animate {
          opacity: 1 !important;
          transform: none !important;
          animation: none !important;
        }
      </style>
    </noscript>
  </head>
  <body>
    <div class="flex min-h-screen items-center justify-center px-6">
      <div class="text-center">
        <p
          class="welcome-animate text-xs uppercase tracking-[0.25em] text-black/40 dark:text-white/40 sm:text-sm"
        >
          Welcome to
        </p>
        <h1
          class="welcome-animate mt-4 text-4xl font-bold tracking-tight text-black dark:text-white sm:text-5xl md:text-6xl"
        >
          {SITE.TITLE}
        </h1>
        <div
          class="welcome-animate mx-auto mt-6 h-px w-12 bg-black/20 dark:bg-white/20"
        >
        </div>
        <p
          class="welcome-animate mt-6 text-sm text-black/50 dark:text-white/50 sm:text-base"
        >
          {SITE.DESCRIPTION}
        </p>
        <div
          class="welcome-animate mt-12 flex flex-col items-center justify-center gap-3 sm:flex-row sm:gap-4"
        >
          <a
            href="/en/"
            class="group flex w-full items-center justify-center gap-2 rounded-lg border border-black/15 px-8 py-3 text-sm font-medium text-black/75 transition-all duration-300 hover:border-[var(--color-accent)] hover:text-[var(--color-accent)] dark:border-white/20 dark:text-white/75 sm:w-auto"
          >
            English
            <span
              class="inline-block transition-transform duration-300 group-hover:translate-x-1"
              >&rarr;</span
            >
          </a>
          <a
            href="/zh/"
            class="group flex w-full items-center justify-center gap-2 rounded-lg border border-black/15 px-8 py-3 text-sm font-medium text-black/75 transition-all duration-300 hover:border-[var(--color-accent)] hover:text-[var(--color-accent)] dark:border-white/20 dark:text-white/75 sm:w-auto"
          >
            中文
            <span
              class="inline-block transition-transform duration-300 group-hover:translate-x-1"
              >&rarr;</span
            >
          </a>
        </div>
      </div>
    </div>

    <style>
      .welcome-animate {
        opacity: 0;
        transform: translateY(16px);
        animation: welcome-fade-in 0.7s ease-out forwards;
      }

      .welcome-animate:nth-child(1) {
        animation-delay: 0.1s;
      }
      .welcome-animate:nth-child(2) {
        animation-delay: 0.3s;
      }
      .welcome-animate:nth-child(3) {
        animation-delay: 0.5s;
      }
      .welcome-animate:nth-child(4) {
        animation-delay: 0.65s;
      }
      .welcome-animate:nth-child(5) {
        animation-delay: 0.85s;
      }

      @keyframes welcome-fade-in {
        to {
          opacity: 1;
          transform: translateY(0);
        }
      }
    </style>
  </body>
</html>
