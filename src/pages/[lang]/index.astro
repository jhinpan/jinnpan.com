---
import Layout from "@layouts/Layout.astro";
import Container from "@components/Container.astro";
import { SITE, HOME, SOCIALS, ABOUT } from "@consts";
import ArrowCard from "@components/ArrowCard.astro";
import Link from "@components/Link.astro";
import { getCollection } from "astro:content";
import type { CollectionEntry } from "astro:content";
import { getPostLang } from "@lib/utils";
import type { Lang } from "@lib/utils";

export function getStaticPaths() {
  return [
    { params: { lang: "zh" } },
    { params: { lang: "en" } },
  ];
}

const { lang } = Astro.params as { lang: Lang };

const blog = (await getCollection("blog"))
  .filter((post) => !post.data.draft && getPostLang(post.id) === lang)
  .sort((a, b) => b.data.date.valueOf() - a.data.date.valueOf())
  .slice(0, SITE.NUM_POSTS_ON_HOMEPAGE);

const projects: CollectionEntry<"projects">[] = (
  await getCollection("projects")
)
  .filter((project) => !project.data.draft)
  .sort((a, b) => b.data.date.valueOf() - a.data.date.valueOf())
  .slice(0, SITE.NUM_PROJECTS_ON_HOMEPAGE);

const i18n = {
  zh: {
    greeting: "Jin Pan",
    tagline: "ML Systems / LLM Inference / RL Infrastructure",
    bio: "威斯康星大学麦迪逊分校计算机科学 MS/PhD 学生，研究方向为 ML Systems。SGLang 社区贡献者，目前在 AMD GenAI 团队实习，专注 RL 系统和 GPU 核函数优化。",
    moreAbout: "更多关于我",
    latestPosts: "最新文章",
    seeAll: "查看全部",
    recentProjects: "近期项目",
    seeAllProjects: "查看全部项目",
    connect: "联系方式",
    connectText: "通过社交媒体或邮件联系我。",
  },
  en: {
    greeting: "Jin Pan",
    tagline: "ML Systems / LLM Inference / RL Infrastructure",
    bio: "MS/PhD student in Computer Sciences at UW-Madison, working on ML Systems. SGLang community contributor. Currently interning at AMD GenAI, focusing on RL systems and GPU kernel optimization.",
    moreAbout: "More about me",
    latestPosts: "Recent Posts",
    seeAll: "See all posts",
    recentProjects: "Recent Projects",
    seeAllProjects: "See all projects",
    connect: "Contact",
    connectText: "Find me on social media or send an email.",
  },
};

const t = i18n[lang];
---

<Layout title={HOME.TITLE} description={HOME.DESCRIPTION} lang={lang}>
  <Container>
    <aside data-pagefind-ignore>
      <h1 class="font-semibold text-black dark:text-white">
        {t.greeting}
      </h1>
      <div class="space-y-16">
        <section>
          <article class="space-y-4">
            <p class="animate">
              {t.tagline}
            </p>
            <p class="animate">
              {t.bio}
            </p>
            <p class="animate">
              <Link href={`/${lang}/about`}>{t.moreAbout} &rarr;</Link>
            </p>
          </article>
        </section>

        {blog.length > 0 && (
          <section class="animate space-y-6">
            <div class="flex flex-wrap items-center justify-between gap-y-2">
              <h2 class="font-semibold text-black dark:text-white">
                {t.latestPosts}
              </h2>
              <Link href={`/${lang}/blog`}>{t.seeAll}</Link>
            </div>
            <ul class="not-prose flex flex-col gap-4">
              {blog.map((post) => (
                <li>
                  <ArrowCard entry={post} />
                </li>
              ))}
            </ul>
          </section>
        )}

        {projects.length > 0 && (
          <section class="animate space-y-6">
            <div class="flex flex-wrap items-center justify-between gap-y-2">
              <h2 class="font-semibold text-black dark:text-white">
                {t.recentProjects}
              </h2>
              <Link href={`/${lang}/projects`}>{t.seeAllProjects}</Link>
            </div>
            <ul class="not-prose flex flex-col gap-4">
              {projects.map((project) => (
                <li>
                  <ArrowCard entry={project} />
                </li>
              ))}
            </ul>
          </section>
        )}

        <section class="animate space-y-4">
          <h2 class="font-semibold text-black dark:text-white">
            {t.connect}
          </h2>
          <article>
            <p>{t.connectText}</p>
          </article>
          <ul class="not-prose flex flex-wrap gap-2">
            {SOCIALS.map((SOCIAL) => (
              <li class="flex gap-x-2 text-nowrap">
                <Link
                  href={SOCIAL.HREF}
                  external
                  aria-label={`${SITE.TITLE} on ${SOCIAL.NAME}`}
                >
                  {SOCIAL.NAME}
                </Link>
                {"/"}
              </li>
            ))}
            <li class="line-clamp-1">
              <Link
                href={`mailto:${SITE.EMAIL}`}
                aria-label={`Email ${SITE.TITLE}`}
              >
                {SITE.EMAIL}
              </Link>
            </li>
          </ul>
        </section>
      </div>
    </aside>
  </Container>
</Layout>
